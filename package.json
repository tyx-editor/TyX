    "@types/bun": "^1.2.12",
    "@types/mousetrap": "^1.6.15",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.30.1",
