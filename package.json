{
  "name": "tyx",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run prebuild && vite",
    "dev:app": "tauri dev",
    "prebuild": "bun run scripts/get-schema.ts > crates/tyx-tiptap-schema/assets/tyx.schema.json && prettier -w crates/tyx-tiptap-schema/assets/tyx.schema.json && bun run scripts/download.ts",
    "build": "bun run prebuild && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "prettier": "prettier",
    "build-web": "echo 'export * from \"./web\"' > src/backend/index.ts && bun run build && echo 'export * from \"./tauri\"' > src/backend/index.ts",
    "deploy": "bun run build-web && netlify deploy -d dist --prod --site tyx-editor"
  },
  "dependencies": {
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@mantine/modals": "^8.0.0",
    "@mantine/notifications": "^8.0.0",
    "@mantine/tiptap": "^8.0.0",
    "@myriaddreamin/typst-ts-web-compiler": "^0.6.0",
    "@myriaddreamin/typst.ts": "^0.6.0",
    "@tabler/icons-react": "^3.31.0",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-dialog": "~2.2.1",
    "@tauri-apps/plugin-process": "~2.2.1",
    "@tauri-apps/plugin-shell": "^2.2.1",
    "@tauri-apps/plugin-updater": "~2.7.1",
    "@tiptap/extension-color": "^2.12.0",
    "@tiptap/extension-highlight": "^2.12.0",
    "@tiptap/extension-link": "^2.12.0",
    "@tiptap/extension-subscript": "^2.12.0",
    "@tiptap/extension-superscript": "^2.12.0",
    "@tiptap/extension-table": "^2.12.0",
    "@tiptap/extension-table-cell": "^2.12.0",
    "@tiptap/extension-table-header": "^2.12.0",
    "@tiptap/extension-table-row": "^2.12.0",
    "@tiptap/extension-text-align": "^2.12.0",
    "@tiptap/extension-text-style": "^2.12.0",
    "@tiptap/extension-underline": "^2.12.0",
    "@tiptap/pm": "^2.12.0",
    "@tiptap/react": "^2.12.0",
    "@tiptap/starter-kit": "^2.12.0",
    "mathlive": "^0.105.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "tiptap-text-direction": "^0.3.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@types/bun": "^1.2.12",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.4.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  },
  "prettier": {
    "semi": false
  }
}
